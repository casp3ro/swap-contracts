{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "baseUrl": "./",
    "types": ["node"],
    "isolatedModules": false,
    "sourceMap": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  }
  // "include": ["./src/**/*.ts"]
}
